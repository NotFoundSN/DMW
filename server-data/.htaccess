# Enable CORS for JSON files
<IfModule mod_headers.c>
    # Allow requests from any origin (puedes restringir a tu dominio específico)
    Header set Access-Control-Allow-Origin "*"
    
    # Allow specific methods
    Header set Access-Control-Allow-Methods "GET, OPTIONS"
    
    # Allow specific headers
    Header set Access-Control-Allow-Headers "Content-Type"
    
    # Cache preflight requests for 1 hour
    Header set Access-Control-Max-Age "3600"
</IfModule>

# Set correct MIME type for JSON files
<IfModule mod_mime.c>
    AddType application/json .json
</IfModule>

# Enable compression for JSON files
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Cache JSON files for 5 minutes (ajusta según necesites)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/json "access plus 5 minutes"
</IfModule>
